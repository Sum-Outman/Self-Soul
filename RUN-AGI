#!/bin/bash
# Self Soul 系统通用启动脚本
echo "正在启动开发服务器..."
cd app
npm run dev &

echo "等待服务启动..."
sleep 10

echo "正在打开主界面..."
if command -v xdg-open > /dev/null; then
  xdg-open "http://localhost:5175/"
elif command -v open > /dev/null; then
  open "http://localhost:5175/"
else
  start "" "http://localhost:5175/"
fi

echo "启动完成！请访问 http://localhost:5175/"
echo "按Ctrl+C停止服务"
wait